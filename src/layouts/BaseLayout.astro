---
export interface Props {
  title?: string;
  description?: string;
}

const { title = 'PassWorth — Smarter passes, smarter choices.', description = 'Compare time-based passes and punch cards at a glance.' } = Astro.props as Props;
import '../styles/global.css';
---

<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="PassWorth" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/og.jpg" />
    <meta property="og:url" content="https://passworth.app" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/og.jpg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
    <script>
      (function() {
        try {
          const saved = localStorage.getItem('pw-theme');
          const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
          const dark = saved ? saved === 'dark' : prefersDark;
          document.documentElement.classList.toggle('dark', dark);
        } catch (_) {}
      })();
    </script>
  </head>
  <body class="min-h-full font-[Inter]">
    <header class="container-responsive py-6">
      <nav class="flex items-center justify-between">
        <a href="/" class="text-4xl font-bold tracking-tight text-slate-900 dark:text-white">PassWorth</a>
        <button id="theme-toggle" aria-label="Toggle dark mode" class="relative h-6 w-10 rounded-full bg-slate-300 transition-colors hover:opacity-90 dark:bg-slate-600">
          <span class="absolute left-0.5 top-0.5 h-5 w-5 rounded-full bg-white shadow transition-transform translate-x-0 dark:translate-x-4"></span>
        </button>
      </nav>
    </header>

    <slot />

    <footer class="mt-32 border-t border-slate-200 py-10 text-sm text-slate-500 dark:border-slate-800">
      <div class="container-responsive flex flex-col items-center justify-between gap-4 sm:flex-row">
        <p>© {new Date().getFullYear()} PassWorth</p>
        <nav class="flex gap-6">
          <a href="/privacy" class="hover:text-slate-700 dark:hover:text-slate-300">Privacy</a>
          <a href="/contact" class="hover:text-slate-700 dark:hover:text-slate-300">Contact</a>
        </nav>
      </div>
    </footer>
    <script>
      (function() {
        const root = document.documentElement;
        const key = 'pw-theme';
        function apply(mode) {
          if (mode === 'dark') root.classList.add('dark');
          else root.classList.remove('dark');
          localStorage.setItem(key, mode);
          const btn = document.getElementById('theme-toggle');
          if (btn) {
            const knob = btn.querySelector('span');
            if (mode === 'dark') btn.classList.add('bg-slate-600');
            else btn.classList.remove('bg-slate-600');
            if (knob) knob.classList.toggle('translate-x-4', mode === 'dark');
            if (knob) knob.classList.toggle('translate-x-0', mode !== 'dark');
          }
        }
        const saved = localStorage.getItem(key);
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        apply(saved || (prefersDark ? 'dark' : 'light'));
        document.getElementById('theme-toggle')?.addEventListener('click', () => {
          const isDark = root.classList.contains('dark');
          apply(isDark ? 'light' : 'dark');
        });
      })();
    </script>
  </body>
  </html>

